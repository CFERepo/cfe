<article class="search" data-json="{{ json }}" data-thumb="{{ thumb }}" data-permalink="{{ permalink }}" data-title="{{ title }}" data-content="{{ content }}">
  <a class="clickable">
    <div class="image">
      <img src="{{ thumb_small }}" />
    </div>
  </a>
  <div class="search-content">
  <h4>{{ title }}</h4>
  <div class="text">
    {{{ excerpt }}}
  </div>
  <a class="clickable read-more" href="{{ permalink }}">Read More</a>
  </div>
</article>